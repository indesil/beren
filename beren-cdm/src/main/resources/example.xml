<definitions failFast="false">
    <definition class="pathToClass">
        //single violation czyli po 1 per field
        <valdiateEach defaultValidator="isNull" defaultMessageFormat="Invalid field at path #fieldPath - #fieldName may not be empty!">
            <field name="a" validator="customValidator" messageFormat="This is some different format message #customParam"/>
            <field name="b"/>
            <field name="c"/>
        </valdiateEach>

        //groupViolation czyli 1 per taka definicja
        <validateGroup defaultValidator="isNull" messageFormat="#fieldName[id1] must not be null and #fieldName[id2] must be something...">
            <field id="id1" name="d"/>
            <field id="id2" name="e" validator="lessThan(5)"/>
            <field id="id3" name="f" validator="between(5, 10)"/>
        </validateGroup>

        //kolejne
        <validateGroup>

        </validateGroup>
    </definition>
</definitions>